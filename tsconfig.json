{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"declarationDir": "types",
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"noUnusedLocals": true,
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "bundler",
		"skipLibCheck": true,
		"strict": true
	},
	"include": ["src", "scripts", "test/test.js"]
}
